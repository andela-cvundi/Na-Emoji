{
    "name": "vundi/Na-Emoji",
    "description": "An Restful emoji client",
    "keywords": ["REST","emoji","api"],
    "homepage": "https://naemoji.herokuapp.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Vundi",
            "email": "Christophervundi@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vundi\\Na-Emoji\\": "src",
            "Vundi\\Na-Emoji\\Model\\": "src/model",
            "Vundi\\Na-Emoji\\Controller\\": "src/controller"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vundi\\Na-Emoji\\Test\\": "tests"
        }
    },
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "vlucas/phpdotenv": "^2.2",
        "vundi/potato-orm": "^1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~2.3",
        "satooshi/php-coveralls": "^1.0",
        "phpunit/phpunit": "^5.1",
        "guzzlehttp/guzzle": "~6.0"
    }
}